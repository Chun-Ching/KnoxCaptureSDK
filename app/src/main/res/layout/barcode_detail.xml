<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/barcode_detail_container"
    android:background="#70ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText"
    >

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4"
        android:id="@+id/guideline"
        />

    <TextView
        android:id="@+id/label_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Barcode: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="ABC1234567890"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/label_length"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Length: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_data"
        />

    <TextView
        android:id="@+id/length"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="20"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/label_data"
        />

    <TextView
        android:id="@+id/label_symbology"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Symbology: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_length"
        />

    <TextView
        android:id="@+id/symbology"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Code128"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/label_length"
        />

    <TextView
        android:id="@+id/label_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Frame id: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_symbology"
        />

    <TextView
        android:id="@+id/time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="10"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/label_symbology"
        />

</androidx.constraintlayout.widget.ConstraintLayout>